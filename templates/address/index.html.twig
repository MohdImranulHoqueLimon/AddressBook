{% extends 'base.html.twig' %}

{% block container %}
    <div class="container">
        <table class="table table-striped">
            <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">First Name</th>
                <th scope="col">Last Name</th>
                <th scope="col">Street No.</th>
                <th scope="col">Zip</th>
                <th scope="col">City</th>
                <th scope="col">Country</th>
                <th scope="col">Phone</th>
                <th scope="col">Birth Day</th>
                <th scope="col">Email</th>
                <th scope="col">Picture</th>
                <th scope="col">Actions</th>
            </tr>
            </thead>
            <tbody>
            {% for address in address %}
            <tr>
                <th scope="row">{{ address.id }}</th>
                <td>{{ address.firstName }}</td>
                <td>{{ address.lastName }}</td>
                <td>{{ address.streetNumber }}</td>
                <td>{{ address.zip }}</td>
                <td>{{ address.city }}</td>
                <td>{{ address.country }}</td>
                <td>{{ address.phoneNumber }}</td>
                <td>{{ address.birthDay }}</td>
                <td>{{ address.email }}</td>
                <td></td>
                <td>
                    <a class="btn btn-primary" href="/edit/{{ address.id }}" role="button">Edit</a>
                    <a class="btn btn-primary" href="/delete/{{ address.id }}" role="button">Remove</a>
                </td>
            </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}

